{
  "name": "geo-sentinel-service",
  "version": "1.0.0",
  "description": "Geo Sentinel Background Location Monitoring Service",
  "main": "main.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.geosentinel.service",
    "productName": "GeoSentinelService",
    "extraMetadata": {
      "API_URL": "https://backend-1-opx1.onrender.com"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "GeoSentinelInstaller.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true
    }
  }
}